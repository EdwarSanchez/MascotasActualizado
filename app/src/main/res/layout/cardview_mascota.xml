<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    android:id="@+id/cardViewMascota"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    card_view:cardCorner="@dimen/cardRadius">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imvMascota"
            android:layout_width="match_parent"
            android:layout_height="@dimen/tamano_mascota"
            android:src="@drawable/mascota1"
            />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btnHuesoLike"
                android:layout_width="@dimen/width_boton"
                android:layout_height="@dimen/height_boton"
                android:src="@drawable/bone3"
                />

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre"

                android:textStyle="bold"
                android:textSize="@dimen/letra_descripciones"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/btnHuesoLike"

                />

            <TextView
                android:id="@+id/tvCantidadLikes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cantidad_likes"

                android:textStyle="bold"
                android:textSize="@dimen/letra_descripciones"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/ivHuesoCantidad"
                />

            <ImageView
                android:id="@+id/ivHuesoCantidad"
                android:layout_width="@dimen/width_boton"
                android:layout_height="@dimen/height_boton"
                android:src="@drawable/bone1"

                android:layout_alignParentRight="true"
                />

        </RelativeLayout>









    </LinearLayout>






</android.support.v7.widget.CardView>